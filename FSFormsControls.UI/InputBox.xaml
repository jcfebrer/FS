<UserControl x:Class="FSFormsControls.UI.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FSFormsControls.UI"
             mc:Ignorable="d">

    <Grid x:Name="InputBoxGrid">
        <Border
                MinWidth="250"
                Background="#FF3968F7"
                BorderBrush="Black" 
                BorderThickness="1" 
                CornerRadius="5,5,5,5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock x:Name="TextBoxHeader" Margin="5" Text="Pregunta:" Foreground="White" />
                <TextBox MinWidth="150" HorizontalAlignment="Center" x:Name="InputTextBox" Width="224"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="YesButton" Margin="5" Content="Si" Background="{x:Null}" Click="YesButton_Click" Foreground="White"/>
                    <Button x:Name="NoButton" Margin="5" Content="No" Background="{x:Null}" Click="NoButton_Click" Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
